# Use the command 'task show' to see all defaults and overrides

# First things first!
weekstart=Monday

# Files
data.location=~/.task

# Color theme (uncomment one to use)
include ~/.task/task.theme

report.next.filter=status:pending -extern limit:page
report.next.columns=id,project,priority,depends,description.count,size,brainpower,start.age,scheduled.countdown,due.remaining,until.remaining,tags,entry.age,recur
report.next.labels=ID,Project,P,D,Description,Sz,B,Start,Scheduled,Due,Until,Tags,Age,Recur

report.list.columns=id,start.age,entry.age,depends.indicator,priority,project,tags,recur.indicator,scheduled.countdown,due,until.remaining,size,brainpower,description.count,urgency
report.list.labels=ID,Active,Age,D,P,Project,Tags,R,Sch,Due,Until,Sz,B,Description,Urg


uda.blocks.type=string
uda.blocks.label=Blocks

uda.size.type=string
uda.size.label=Size
uda.size.values=L,S,XS
uda.size.default=S

uda.brainpower.type=string
uda.brainpower.label=Brainpower
uda.brainpower.values=L,M,S
uda.brainpower.default=M


context.nowork=!(project:dcl)
context.dcl=(project:dcl or project:coding.cdist)
context.iypt=project:iypt18
context.school=project:school

report.in.columns     = id,description
report.in.description = Inbox
report.in.filter      = status:pending limit:page (+in)
report.in.labels      = ID,Description

report.extern.description=Simple list of tasks waiting on something external (+extern)
report.extern.columns=id,priority,project,tags,due,description,size
report.extern.labels=ID,P,Project,Tags,Due,Description,Sz
report.extern.sort=urgency-
report.extern.filter=(status:pending +extern)

report.agenda.description=Weekly agenda
report.agenda.columns=id,scheduled.countdown,priority,project,tags,due,description,size
report.agenda.labels=ID,Scheduled,P,Project,Tags,Due,Description,Sz
report.agenda.sort=scheduled+/,urgency-
report.agenda.filter=(status:pending)

# from tasksh review -- TODO move to separate file
uda.reviewed.type=date
uda.reviewed.label=Reviewed
report._reviewed.description=Tasksh review report.  Adjust the filter to your needs.
report._reviewed.columns=uuid
report._reviewed.sort=reviewed+,modified+
report._reviewed.filter=( reviewed.none: or reviewed.before:now-6days ) and ( +PENDING or +WAITING )

include ~/bin/eisenmux/twreports

uda.priority.values=H,M,,L
urgency.uda.priority.L.coefficient=-1


indent.annotation=4
nag=''
