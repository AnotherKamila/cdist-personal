# ~/.xbindkeysrc

"amixer -c0 sset Master toggle"
  XF86AudioMute

"amixer -c0 sset Master 4%-"
  XF86AudioLowerVolume

"amixer -c0 sset Master 4%+"
  XF86AudioRaiseVolume

"xbacklight -inc 5"
  XF86MonBrightnessUp

"xbacklight -dec 5"
  XF86MonBrightnessDown

"i3lock -i $(find $HOME/u/media/photos/pretty/ -name '*.png' | sort -R | head -n1)"
  Control + Alt + L

"xtrlock"
  Control + Alt + semicolon

"i3lock -i $(find $HOME/u/media/photos/pretty/ -name '*.png' | sort -R | head -n1); systemctl suspend -i"
  Control + Alt + K
